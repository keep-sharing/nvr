menu "MMC Host controller Support"

config MMC
	bool "Enable MMC support"
	depends on (ARCH_NA51068_A32 || ARCH_SUNXI || SANDBOX || ARCH_NT72172_A32 || ARCH_NT72172_A64 || ARCH_NT72673_A32 || ARCH_NT72673_A64 || ARCH_NT72671_A32 || ARCH_NT72671_A64)
	help
	  TODO: Move all architectures to use this option

config DM_MMC
	bool "Enable MMC controllers using Driver Model"
	depends on DM
	help
	  This enables the MultiMediaCard (MMC) uclass which suports MMC and
	  Secure Digital I/O (SDIO) cards. Both removable (SD, micro-SD, etc.)
	  and non-removable (e.g. eMMC chip) devices are supported. These
	  appear as block devices in U-Boot and can support filesystems such
	  as EXT4 and FAT.

config MSM_SDHCI
	bool "Qualcomm SDHCI controller"
	depends on DM_MMC
	help
	  Enables support for SDHCI 2.0 controller present on some Qualcomm
          Snapdragon devices. This device is compatible with eMMC v4.5 and
          SD 3.0 specifications. Both SD and eMMC devices are supported.
	  Card-detect gpios are not supported.

config ROCKCHIP_DWMMC
	bool "Rockchip SD/MMC controller support"
	depends on DM_MMC && OF_CONTROL
	help
	  This enables support for the Rockchip SD/MMM controller, which is
	  based on Designware IP. The device is compatible with at least
	  SD 3.0, SDIO 3.0 and MMC 4.5 and supports common eMMC chips as well
	  as removeable SD and micro-SD cards.

config SH_SDHI
	bool "SuperH/Renesas ARM SoCs on-chip SDHI host controller support"
	depends on RMOBILE
	help
	  Support for the on-chip SDHI host controller on SuperH/Renesas ARM SoCs platform

config PIC32_SDHCI
	bool "Microchip PIC32 on-chip SDHCI support"
	depends on DM_MMC && MACH_PIC32
	help
	  Support for Microchip PIC32 SDHCI controller.

config ZYNQ_SDHCI
	bool "Arasan SDHCI controller support"
	depends on DM_MMC && OF_CONTROL
	help
	  Support for Arasan SDHCI host controller on Zynq/ZynqMP ARM SoCs platform

config MMC_UNIPHIER
	bool "UniPhier SD/MMC Host Controller support"
	depends on ARCH_UNIPHIER
	help
	  This selects support for the SD/MMC Host Controller on UniPhier SoCs.

config SANDBOX_MMC
	bool "Sandbox MMC support"
	depends on MMC && SANDBOX
	help
	  This select a dummy sandbox MMC driver. At present this does nothing
	  other than allow sandbox to be build with MMC support. This
	  improves build coverage for sandbox and makes it easier to detect
	  MMC build errors with sandbox.

config NVT_COMMON_EMMC
	bool "Novatek EMMC support"
	depends on MMC && (ARCH_NT72172_A32 || ARCH_NT72172_A64 || ARCH_NT72673_A32 || ARCH_NT72673_A64 || ARCH_NT72671_A32 || ARCH_NT72671_A64)
	help
	  This select a Novatek EMMC host controller driver.

config NVT_COMMON_EMMC_LEGACY
	bool "Novatek legacy EMMC support"
	depends on MMC && (ARCH_NT72172_A32 || ARCH_NT72172_A64 || ARCH_NT72673_A32 || ARCH_NT72673_A64 || ARCH_NT72671_A32 || ARCH_NT72671_A64)
	help
	  This select a Novatek legacy EMMC host controller driver.
	  
config NVT_IVOT_MMC
	bool "Novatek IVOT MMC support"
	depends on MMC && ARCH_NA51068_A32
	help
	  This select a Novatek IVOT MMC host controller driver.
	  
config NVT_MMC
	bool "Novatek MMC support"
	depends on (ARCH_NA51000_A32 || ARCH_NA51055_A32 || ARCH_NA51068_A32)
	help
	  This select a Novatek MMC host controller driver.

config NVT_MMC_MAX_NUM
	int "Maximum MMC channel number"
	depends on NVT_MMC
	default 1
	help
	  This select the maximum number of Novatek MMC host controller driver.

config NVT_MMC_CHANNEL_SDIO1
	bool "Novatek MMC support channel SDIO1"
	depends on NVT_MMC
	help
	  This select channel of Novatek MMC host controller driver.

config SD_CARD1_POWER_CONTROL
	bool "SD CARD1 Power control"
	depends on NVT_MMC_CHANNEL_SDIO1
	help
	  This select power control of sd card1.

config SD_CARD1_POWER_PIN
	int "SD CARD1 Power pin number"
	depends on SD_CARD1_POWER_CONTROL
	help
	  This select power pin of sd card1.

config SD_CARD1_ON_STATE
	int "SD CARD1 Power on state"
	depends on SD_CARD1_POWER_CONTROL
	help
	  This select power on state of sd card1.

config NVT_MMC_CHANNEL_SDIO2
	bool "Novatek MMC support channel SDIO2"
	depends on NVT_MMC
	help
	  This select channel of Novatek MMC host controller driver.

config SD_CARD2_POWER_CONTROL
	bool "SD CARD2 Power control"
	depends on NVT_MMC_CHANNEL_SDIO2
	help
	  This select power control of sd card2.

config SD_CARD2_POWER_PIN
	int "SD CARD2 Power pin number"
	depends on SD_CARD2_POWER_CONTROL
	help
	  This select power pin of sd card2.

config SD_CARD2_ON_STATE
	int "SD CARD2 Power on state"
	depends on SD_CARD2_POWER_CONTROL
	help
	  This select power on state of sd card2.

config NVT_MMC_CHANNEL_SDIO3
	bool "Novatek MMC support channel SDIO3"
	depends on NVT_MMC
	help
	  This select channel of Novatek MMC host controller driver.

endmenu
