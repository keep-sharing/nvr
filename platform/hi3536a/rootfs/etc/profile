# /etc/profile: system-wide .profile file for the Bourne shells
#
#

set_path_before()
{
	[ -d $1 ] && PATH="$1:$PATH"
}

PATH="/usr/bin:/usr/sbin:/bin:/sbin"
set_path_before /usr/local/sbin
set_path_before /usr/local/bin
set_path_before /opt/app/bin
LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:/lib:/opt/app/libs
QT_QWS_FONTDIR=/opt/app/bin/fonts

export PATH
export LD_LIBRARY_PATH
export QT_QWS_FONTDIR

export ASAN_OPTIONS=allocator_release_to_os_interval_ms=5000:malloc_context_size=15:quarantine_size_mb=64:log_path=/tmp/asan.log

# ANSI COLORS
CRE="
[K"
NORMAL="[0;39m"
RED="[1;31m"
GREEN="[1;32m"
YELLOW="[1;33m"
BLUE="[1;34m"
MAGENTA="[1;35m"
CYAN="[1;36m"
WHITE="[1;37m"

umask 027
ulimit -HSn 4096
ulimit -s 2048

echo "${GREEN}Welcome to Linux.${NORMAL}"
echo 2 >/proc/sys/kernel/randomize_va_space
echo 8192 >/proc/sys/vm/min_free_kbytes
